<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "bg_color.css" %>
  </head>
  <body>
    <h1>Edit Student Detail</h1>
    <%= link_to 'Logout', :controller => "welcome", :action => "login" %><br><br>
    <%= form_for @student, as: :student, url: student_path(@student), method: :patch do |f| %>
    <%= link_to :Back, :controller => "students" %>
      <p>
        <%= f.label :Name %><br>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :Contact_No %><br>
        <%= f.text_field :contact %>
      </p>
      <p>
        <%= f.label :Email_Id %><br>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :Father_Name %><br>
        <%= f.text_field :father %>
      </p>
      <p>
        <%= f.label :DOb %><br>
        <%= f.text_field :dob %>
      </p>
      <p>
        <%= f.label :Course %><br>
        <%= f.collection_select :course_id, Course.course_name, :id, :name , :prompt => 'Select One' %>
      </p>
      <p>
        <%= f.submit :Update %>
      </p>
    <% end %>
  </body>
</html>
