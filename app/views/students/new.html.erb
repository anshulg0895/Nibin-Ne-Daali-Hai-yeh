<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "bg_color.css" %>
  </head>
  <body>
    <div id="body">
      <marquee behavior="alternate">Welcome to the Sample App!</marquee>
      <div id="header">
        <div id="header1">
          <h1>Student Registration</h1>
        </div>
        <div id="header2">
          <b><%= link_to '<button type="button" ><span class="glyphicon glyphicon-log-out">Logout</span></button>'.html_safe, :controller => "welcome", :action => "login" %></b>
        </div>&nbsp;&nbsp;
      <div id="innerBody">
        <span class="glyphicon glyphicon-step-backward"></span><b><%= link_to :Back, students_path %>&nbsp;&nbsp;<%= link_to 'Cancel', type: :reset %></b>
        <%= form_for :student, url: students_path do |f| %>
          <p>
            <span class="glyphicon glyphicon-user"></span>&nbsp;<%= f.label :Name, :id => 'name' %><br>
            <%= f.text_field :name, :required => true, :maxlength => 50, :pattern => '[a-zA-Z ]+', :id => 'name2', :placeholder => "Name" %>
          </p>

          <p>
            <span class="glyphicon glyphicon-phone"></span>&nbsp;<%= f.label 'Contact No', :id => 'contact' %><br>
            <%= f.text_field :contact, :required => true, :minlength => 10, :maxlength => 10, :pattern => '[0-9]+', :id => 'contact2', :placeholder => "Contact No" %>
          </p>

          <p>
            <span class="glyphicon glyphicon-send"></span>&nbsp;<%= f.label 'Email Id', :id => 'email' %><br>
            <%= f.text_field :email, :required => true, :pattern => '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$', :id => 'email2', :placeholder => "Email Address" %>
          </p>

          <p>
            <span class="glyphicon glyphicon-user"></span>&nbsp;<%= f.label 'Father Name', :id => 'father' %><br>
            <%= f.text_field :father, :required => true, :maxlength => 50, :pattern => '[a-zA-Z ]+', :id => 'father2', :placeholder => "Father's Name" %>
          </p>

          <p>
            <span class="glyphicon glyphicon-calendar"></span>&nbsp;<%= f.label :DOB, :id => 'dob' %><br>
            <%= f.text_field :dob, :required => true, :id => 'dob2', :placeholder => "dd-mm-yy" %>
          </p>

          <p>
            <span class="glyphicon glyphicon-th-list"></span>&nbsp;<%= f.label :Course, :id => 'course' %><br>
            <%= f.collection_select :course_id, Course.course_name, :id, :name , :prompt => 'Select One', :id => 'course2' %>
          </p>

          <p>
            <b><%= f.submit :Register, :id => 'register' %></b>
          </p>
        <% end %>
      </div>
    </div>
  </body>
</html>
