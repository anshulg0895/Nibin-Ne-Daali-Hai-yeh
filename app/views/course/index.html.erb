<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "bg_color.css" %>
  </head>
  <body>
    <div id="body">
      <marquee behavior="alternate">Welcome to the Sample App!</marquee>
      <div id="header">
        <h1>List of courses</h1>
      </div>
      <div id="logout">
        <b><%= link_to '<button type="button" ><span class="glyphicon glyphicon-log-out">Logout</span></button>'.html_safe, :controller => "welcome", :action => "login" %></b>
      </div>
      <div id="innerBody">
        <span class="glyphicon glyphicon-step-backward"></span><b><%= link_to :Back, :controller => "students" %></b>
        <ul>
          <% @courses.each do |course| %>
            <div>
              <b><li id="course_links"><span class="glyphicon glyphicon-link"></span><%= link_to course.name, :controller => "course", :action => "show", :temp => course.id %></b>
            </div>&nbsp;
            <div>
              <%= link_to 'Edit Course', edit_course_path(course) %>&nbsp;&nbsp;</li><span class="glyphicon glyphicon-edit"></span>
              <%= link_to 'Delete Course', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %><span class="glyphicon glyphicon-trash"></span>
            </div>&nbsp;
          <% end %>
        </ul>
      </div>
    </div>
  </body>
</html>
